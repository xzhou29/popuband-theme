    }
    .app-compatible-centered-2{
      font-size: 18px;
    }
    .app-compatible-img{
      margin-top:14px;
      margin-bottom:10px;
      height:80px;
      width:80px;
    }
  }
  @media screen and (max-width: 1440px) and (min-width: 1204px) {
    .app-compatible-centered {
      font-size: 44px;
    }
    .app-compatible-centered-2{
      font-size: 20px;
    }
    .app-compatible-img{
      margin-top:20px;
      margin-bottom:10px;
      height:100px;
      width:100px;
    }
  }
  @media screen and (min-width: 1441px) {
    .app-compatible-centered {
      font-size: 54px;
    }  
    .app-compatible-centered-2{
      font-size: 24px;
    }
    .app-compatible-img{
      margin-top:20px;
      margin-bottom:10px;
      height:140px;
      width:140px;
    }
  }


</style>


<section class="module-container">

